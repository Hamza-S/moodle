<ol class="breadcrumb" role="navigation">
    {{^breadcrumbmenus}}
        {{#get_items}}
            {{#has_action}}
            <li class="breadcrumb-item"><a href="{{{action}}}" {{#get_title}}title="{{get_title}}"{{/get_title}}>{{text}}</a></li>
            {{/has_action}}
            {{^has_action}}
            <li class="breadcrumb-item">{{text}}</li>
            {{/has_action}}
        {{/get_items}}
    {{/breadcrumbmenus}}
    {{#breadcrumbmenus}}
        {{#get_items}}
        <li class="breadcrumb-item">
                <span class="dropdown">
                {{^ is_last }}
                    <a {{# has_siblings}}
                            id="crumbs{{key}}"
                            href="#"
                            class="dropdown-toggle"
                            data-toggle="dropdown"
                            aria-haspopup="true"
                            aria-expanded="false"
                        {{/ has_siblings }}
                        {{^ has_siblings }}
                            href="{{{action}}}"
                        {{/ has_siblings }}
                         {{#get_title}}title="{{get_title}}"{{/get_title}}>
                {{/ is_last }}
                    {{text}}
                {{^ is_last }}
                    </a>
                    {{# has_siblings }}
                        <div class="dropdown-menu" aria-labelledby="crumbs{{key}}">
                            {{# get_siblings }}
                                <a class="dropdown-item {{#isactive}}active{{/isactive}}" href="{{{resolve_action}}}" {{#get_title}}title="{{get_title}}"{{/get_title}}>{{text}}</a>
                            {{/ get_siblings }}
                        </div>
                    {{/ has_siblings }}
                {{/ is_last }}
            </span>
        </li>
        {{/get_items}}
    {{/breadcrumbmenus}}
</ol>
