{{< core_form/element-template }}
    {{$element}}
        <input type="text"
                {{#element.frozen}}readonly{{/element.frozen}}
                class="form-control {{#error}}form-control-danger{{/error}}"
                name="{{element.name}}"
                id="{{element.id}}"
                value="{{element.value}}"
                size="{{element.size}}"
                {{#error}}
                    autofocus aria-describedby="id_error_{{element.name}}"
                {{/error}}
                {{{element.attributes}}} >
    {{/element}}
{{/ core_form/element-template }}