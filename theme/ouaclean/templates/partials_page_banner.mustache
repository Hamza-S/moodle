<header class="header">
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#moodle-navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            {{#show_conversation_preview}}
                <ul class="message-counter visible-xs pull-right">
                {{<local_conversations/partials_message_alert}}
                    {{$mobileview}}visible-xs{{/mobileview}}
                    {{$labelid}}messagenotificationmobile{{/labelid}}
                {{/local_conversations/partials_message_alert}}
                </ul>
            {{/show_conversation_preview}}
            {{#show_notification_preview}}
                <ul class="notification-counter visible-xs pull-right">
                {{<local_conversations/partials_notification_alert}}
                {{$mobileview}}visible-xs{{/mobileview}}
            {{$labelid}}notificationmobile{{/labelid}}
            {{/local_conversations/partials_notification_alert}}
            </ul>
            {{/show_notification_preview}}
                <a class="navbar-brand" href="{{{wwwroot}}}"><img class="img-responsive logo" src="{{logo}}" alt="logo" /></a>
            </div>
            <div id="moodle-navbar" class="navbar-collapse collapse">
                {{{customheadermenu}}}
                <ul class="nav navbar-nav navbar-right user-nav">
                    <li>
                        {{#user}}
                            <ul id="profile-block">
                                {{#show_notification_preview}}
                                    {{>local_conversations/partials_notification_alert}}
                                {{/show_notification_preview}}
                                {{#show_conversation_preview}}
                                    {{>local_conversations/partials_message_alert}}
                                {{/show_conversation_preview}}
                                <li class="hidden-sm hidden-xs"><p>{{{userfullname}}}</p></li>
                                <li class="hidden-xs">{{{useravatar}}}</li>
                                <li><a href="{{logout_link}}"><span class="hidden-sm">{{#str}}logout{{/str}}</span><i class="fa fa-external-link"></i></a></li>
                            </ul>
                        {{/user}}
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
