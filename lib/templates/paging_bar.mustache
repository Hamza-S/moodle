{{!
    @template core/paging_bar

    Pagination bar.

    Example context (json):
    {
        "haspages": true,
        "label": "Description of pagination control",
        "previous": {
            "url": "#prev",
            "page": 7
        },
        "first": {
            "url": "#first",
            "page": 1
        },
        "last": {
            "url": "#last",
            "page": 23
        },
        "next": {
            "url": "#next",
            "page": 9
        },
        "pages": [
            {
                "url": "#page6",
                "active": false,
                "page": 6
            },
            {
                "url": "#page7",
                "active": false,
                "page": 7
            },
            {
                "url": "#page8",
                "active": true,
                "page": 8
            },
            {
                "url": "#page9",
                "active": false,
                "page": 9
            },
            {
                "url": "#page10",
                "active": false,
                "page": 10
            }
        ]
    }
}}
{{#haspages}}
    <nav aria-label="{{label}}">
        <ul class="pagination">
            {{#previous}}
                <li class="page-item">
                    <a href="{{url}}" class="page-link">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">{{#str}}previous{{/str}}</span>
                    </a>
                </li>
            {{/previous}}
            {{#first}}
                <li class="page-item">
                    <a href="{{url}}" class="page-link">{{page}}</a>
                </li>
                <li class="page-item disabled">
                    <span class="page-link">&hellip;</a>
                </li>
            {{/first}}
            {{#pages}}
                <li class="page-item {{#active}}active{{/active}}">
                    <a href="{{url}}" class="page-link">
                        {{page}}
                        {{#active}}
                            <span class="sr-only">{{#str}}currentinparentheses{{/str}}</span>
                        {{/active}}
                    </a>
                </li>
            {{/pages}}
            {{#last}}
                <li class="page-item disabled">
                    <span class="page-link">&hellip;</a>
                </li>
                <li class="page-item">
                    <a href="{{url}}" class="page-link">{{page}}</a>
                </li>
            {{/last}}
            {{#next}}
                <li class="page-item">
                    <a href="{{url}}" class="page-link">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">{{#str}}next{{/str}}</span>
                    </a>
                </li>
            {{/next}}
        </ul>
    </nav>
{{/haspages}}
