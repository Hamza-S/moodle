<div id="notifications">
{{#mynotifications}}
    <div class="panel{{#simplenotification}} simple{{/simplenotification}}{{#unread}} unread{{/unread}}"  data-isconnectionrequest="{{isconnectionrequest}}" data-messageid="{{notificationid}}" id="notification-{{notificationid}}">
        {{^simplenotification}}
            <div class="panel-heading {{readstatus}}" role="tab" id="notification_heading{{notificationid}}">
                <h4 class="panel-title">
                    <a role="button" data-toggle="collapse" data-parent="#accordion" href="#notification_collapse{{notificationid}}"
                       class="collapsed"
                       aria-expanded="false"
                       aria-controls="notification_collapse{{notificationid}}">
                       <div class="panel-subject">
                           <div class="panel-subject-inner">
                               <i class="fa {{iconclass}}"></i>
                               <span class="subject">{{subject}}</span>
                           </div>
                       </div>
                       <div class="time">
                           <span class="date-month">
                               {{{timecreated_formatted}}}
                           </span>
                           <i class="fa fa-chevron-down expand-collapse"></i>
                       </div>
                    </a>
                </h4>
            </div>
        {{/simplenotification}}
            <div id="notification_collapse{{notificationid}}" class="{{^simplenotification}}panel-collapse collapse{{/simplenotification}} {{^simplenotification}}" aria-labelledby="notification_heading{{notificationid}}{{/simplenotification}}">

                <div class="panel-body" data-messageid="{{notificationid}}">
                    <div class="message {{#isconnectionrequest}}connection-request{{/isconnectionrequest}}">
                        <div class="wrapper">
                            <a class="userpicturelink clearfix" href="{{userprofileurl}}">
                                <img src="{{userpictureurl}}" alt="{{userfullname}}" class="userpicture" />
                            </a>
                            {{{fullmessagehtml}}}
                        </div>
                        {{#simplenotification}}
                        <div class="time">
                           <span class="date-month">
                               {{{timecreated_formatted}}}
                           </span>
                        </div>
                        {{/simplenotification}}
                    </div>
                </div>
            </div>
        {{>local_conversations/notification_controls}}
    </div>


{{/mynotifications}}
{{^mynotifications}}
    <div class="nonotifications"><p>{{#str}}nonotifications,local_conversations{{/str}}</p></div>
{{/mynotifications}}
</div>
