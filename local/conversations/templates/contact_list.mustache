                </div>
            </a>
        </li>
    {{/mycontactswithmessages}}
    <li class="nocontactsormessages {{#hascontacts}}hidden{{/hascontacts}}">
        {{#search}}
            {{#str}}nocontactsfound, local_conversations{{/str}}
        {{/search}}
        {{^search}}
            {{#str}}noconversations, local_conversations{{/str}}
        {{/search}}
    </li>
